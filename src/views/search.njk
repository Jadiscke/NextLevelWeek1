{% extends "layout.njk" %}
{% set pageId = "page-search-results" %}
{% block title %}
    <title>Resultados</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="/styles/search-results.css">
{% endblock styles %}

{% block content %}
    {% include "partials/page-header.njk" %}
    <main>
        <h4>

        {% if total > 0 %}
            <strong>
            {{total}} pontos 
                
            </strong>
            Encontrados
        {% else %}
            <h1>Nenhum ponto de coleta encontrado</h1>

        {% endif %}
            
        </h4>

        <div class="cards">

            {% for place in places %}

                 <div class="card">
                    <img src="{{place.image}}" alt="Colectoria">
                    <h1>{{place.name}}</h1>
                    <h3>{{place.items}}</h3>
                    <p>
                        {{place.city}}, {{place.state}}
                        <br/>
                        {{place.address}}
                        <br/>
                        {{place.address2}}
                    </p>
                </div>


            {% endfor %}
        </div>
    </main>
{% endblock content %}